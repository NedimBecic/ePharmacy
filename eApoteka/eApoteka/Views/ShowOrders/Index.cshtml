@model List<eApoteka.Models.Narudzba>

@{
    ViewData["Title"] = "ShowOrdersView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Orders</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #fff;
            color: #333;
        }

        .container {
            margin-top: 100px;
            margin-bottom: 100px;
        }

        .my-4 {
            margin-bottom: 2em !important;
            color: #659934;
            font-weight: bold;
            font-size: 3em;
        }

        .order-card {
            border: 1px solid #dcdcdc;
            padding: 30px;
            margin: 15px 0;
            border-radius: 10px;
            background-color: #fffff;
            border: 2px solid;
            border-color: #659934;
        }

        .order-date {
            font-size: 36px !important;
            color: #659934;
            font-weight: 600;
            text-align: center;
            background-color: #fffff;
            border: 1px solid;
            border-color: #659934;
            padding: 50px;
            border-radius: 10px;
        }

        .order-content {
            padding-top: 20px;
            padding-left: 20px;
        }

            .order-content a {
                color: #659934;
            }

            .order-content h5 {
                color: #659934;
                font-weight: bold;
            }

        .order-status-icon {
            font-size: 24px;
            color: #659934;
            float: right;
        }

    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center my-4">Your Orders</h2>
        @if (Model != null && Model.Count > 0)
        {
            @for (var i = 0; i < Model.Count; i++)
            {
                var order = Model[i];
                <div class="order-card">
                    <div class="row">
                        <div class="col-2 order-date">
                            <div>@order.Timestamp.ToString("dd")</div>
                            <div>@order.Timestamp.ToString("MMM")</div>
                        </div>
                        <div class="col-10 order-content">
                            <h5>Order no. @(i + 1)</h5>
                            <p>@(order.DetaljDostave?.AdresaDostave ?? "No address provided")</p>
                            <p>
                                @if (order.Stavke != null && order.Stavke.Count > 0)
                                {
                                    @foreach (var item in order.Stavke)
                                    {
                                        <span>@(item.Proizvod?.Naziv ?? "Unknown product") (@item.Kolicina x $@(item.Proizvod?.Cijena.ToString("F2") ?? "0.00"))<br /></span>
                                    }
                                }
                                else
                                {
                                    <span>No products in order</span>
                                }
                            </p>
                            <p>Total: $@(order.Stavke?.Sum(s => (s.Proizvod?.Cijena ?? 0) * s.Kolicina).ToString("F2") ?? "0.00")</p>
                            <img src="~/Images/delivery-truck.png" alt="Truck Icon" class="order-status-icon" style="width: 48px; height: 48px; float: right;">
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No orders found.</p>
        }
    </div>
</body>
</html>
