@model eApoteka.Models.ViewModels.SearchViewModel


@{
    ViewData["Title"] = "PretragaView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Page with Carousels</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #fff;
            color: #333;
        }

        .search-section {
            text-align: center;
            padding: 50px 0;
        }

            .search-section h2 {
                margin-bottom: 30px;
                font-weight: 300;
                color: #659934;
                font-size: 2.5em;
            }

        .search-bar {
            max-width: 600px;
            margin: 0 auto;
            display: flex;
            border: 1px solid #ccc;
            border-radius: 50px;
            overflow: hidden;
        }

            .search-bar input {
                border: none;
                padding: 15px;
                flex-grow: 1;
                border-radius: 50px 0 0 50px;
                border: 1px solid #659934 !important;
            }

            .search-bar button {
                border: none;
                padding: 15px 30px;
                background-color: #659934;
                color: white;
                border-radius: 0 50px 50px 0;
            }

                .search-bar button:hover {
                    background-color: rgba(101, 153, 52, 0.8);
                    border-color: rgba(101, 153, 52, 0.8);
                    color: white;
                }

        .articles {
            padding: 50px 0;
        }

        .carousel-container {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            margin: 10px;
            height: 300px;
            border: 1px solid #659934 !important
        }

        .carousel-item {
            text-align: center;
        }

        .article-date {
            font-size: 24px;
            font-weight: bold;
            color: #659934;
        }

        .article-title {
            margin-top: 25px;
            font-size: 20px;
            font-weight: bold;
        }

        .article-content {
            margin-top: 30px;
            color: #777;
        }

        .article a {
            margin-top: 30px;
            display: inline-block;
            color: #659934;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="search-section">
            <h2>What are you looking for?</h2>
            <div class="search-bar">
                <input type="text" placeholder="Type here">
                <button type="button">Search</button>
            </div>
        </div>

        <div class="row articles">
            <div class="col-md-6">
                <div id="carousel1" class="carousel slide carousel-container" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="article">
                                <div class="article-date">28 JAN</div>
                                <div class="article-title">Headline One</div>
                                <div class="article-content">
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                                </div>
                                <a href="#">Read more</a>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="article">
                                <div class="article-date">29 JAN</div>
                                <div class="article-title">Headline Two</div>
                                <div class="article-content">
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                                </div>
                                <a href="#">Read more</a>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel1" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel1" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="col-md-6">
                <div id="carousel2" class="carousel slide carousel-container" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="article">
                                <div class="article-date">30 JAN</div>
                                <div class="article-title">Headline Three</div>
                                <div class="article-content">
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                                </div>
                                <a href="#">Read more</a>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="article">
                                <div class="article-date">31 JAN</div>
                                <div class="article-title">Headline Four</div>
                                <div class="article-content">
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                                </div>
                                <a href="#">Read more</a>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel2" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel2" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</html>



